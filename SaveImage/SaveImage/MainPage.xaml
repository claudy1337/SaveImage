<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveImage.MainPage"
             NavigationPage.HasNavigationBar="False"
             Visual="Default">
    <StackLayout Padding="30" Spacing="30">
        <StackLayout>
            <Entry x:Name="nameImg" Placeholder="Введите название"/>
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand" Orientation="Horizontal">
            <Button x:Name="GetPhoto" Text="Галерея" 
                    HorizontalOptions="FillAndExpand"/>
            <Button x:Name="PhotoGetAsync"
                    Text="Камера" 
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout>
            
            <Button Text="Добавить" />
        </StackLayout>
    </StackLayout>
</ContentPage>
